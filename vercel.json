{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "poker-scenario-analyzer",
  "buildCommand": "npm run build",
  "outputDirectory": "packages/web/src/public",
  "framework": null,
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/api/data", "destination": "/api/data.js" },
    { "source": "/api/health", "destination": "/api/health.js" },
    { "source": "/api/variants", "destination": "/api/variants.js" },
    { "source": "/api/simulate", "destination": "/api/simulate.js" },
    { "source": "/api/:path*", "destination": "/api/index.js" }
  ],
  "headers": [
    {
      "source": "/data/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Encoding",
          "value": "gzip"
        }
      ]
    },
    {
      "source": "/(.*).js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*).css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ],
  "regions": ["iad1"]
}
